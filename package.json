{
  "name": "huntoad",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build/index.js",
    "typecheck": "tsc",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@remix-run/css-bundle": "2.8.1",
    "@remix-run/node": "2.8.1",
    "@remix-run/react": "2.8.1",
    "@remix-run/serve": "2.8.1",
    "clsx": "2.0.0",
    "conf": "11.0.2",
    "front-matter": "4.0.2",
    "isbot": "3.7.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-simplemde-editor": "5.2.0",
    "socket.io-client": "^4.7.5",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "2.0.1",
    "@remix-run/eslint-config": "2.0.1",
    "@tailwindcss/forms": "0.5.6",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "@types/uuid": "9.0.4",
    "eslint": "8.50.0",
    "patch-package": "8.0.0",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.4",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^[~/]",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "printWidth": 100
  }
}
